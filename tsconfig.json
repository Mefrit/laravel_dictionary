{
  "compilerOptions": {
      "incremental": true,
      "target": "es5",
      "jsx": "react",
      "module": "amd",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "outDir": "./public/js"
  },

  "include": [
      "./resources/ts/**/*.ts",
      "./resources/ts/**/*.tsx"     
  ],
  "exclude": [
      "./node_modules",
      "./src/requireJSconfig/requireConfig.js",
      "./dist/app.js",
      "/webpack.config.js",
      "./server.js"
  ]
}